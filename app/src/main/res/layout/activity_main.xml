<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:gravity="right"
        android:text="@string/start_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color"

 />

    <Button
        android:id="@+id/update_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/update_button_main"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:onClick="main_update_void"
  />

    <Button
        android:id="@+id/delete_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/delete_button_main"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView"
        android:onClick="main_delete_void"
        />


    <ImageButton
        android:id="@+id/drinks_button_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/drink"
        android:onClick="main_drinks_void"/>

    <ImageButton
        android:id="@+id/shots_button_main"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shot"
        android:onClick="main_shots_void"/>
    <ImageButton
        android:id="@+id/cart_button_main"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cart"
        android:onClick="main_cart_void"/>


</RelativeLayout>