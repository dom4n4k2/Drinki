<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:gravity="center"
        android:text="@string/start_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_color"

 />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/button_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_below="@+id/textView"
  />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/button_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_below="@+id/textView"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/button_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:layout_below="@+id/textView"
        />

    <ImageButton
        android:id="@+id/drinks_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/drink"
        android:onClick="main_drinks_void"/>

    <ImageButton
        android:id="@+id/shots_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shot"
        android:onClick="main_shots_void"/>
    <ImageButton
        android:id="@+id/cart_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cart"
        android:onClick="main_cart_void"/>


</RelativeLayout>