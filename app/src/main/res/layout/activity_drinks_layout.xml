<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".drinks">




    <TextView
        android:id="@+id/textView_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:gravity="center"
        android:text="@string/drinks_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_color"

        />

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:groupIndicator="@null" />


    <Button
        android:id="@+id/drinks_button_back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/start_button_color_background"
        android:textColor="@color/start_button_color_text"
        android:text="@string/drinks_button_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:layout_below="@+id/textView"
        android:onClick="drinks_back_void"
        android:visibility="invisible"
 />




</RelativeLayout>